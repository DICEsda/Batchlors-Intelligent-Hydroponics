# Environment variables for ML service
# Copy to .env and fill in values

# MongoDB Connection
MONGODB_HOST=mongodb
MONGODB_PORT=27017
MONGODB_DATABASE=iot_hydroponics
MONGODB_USERNAME=admin
MONGODB_PASSWORD=adminpassword

# MQTT Broker
MQTT_HOST=mosquitto
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_CLIENT_ID=ml-service

# ML Service
ML_API_HOST=0.0.0.0
ML_API_PORT=8000
ML_MODEL_DIR=/app/models
ML_DATA_DIR=/app/data

# Azure Digital Twins
# Get endpoint from Azure Portal: https://<instance-name>.api.<region>.digitaltwins.azure.net
AZURE_DT_ENDPOINT=https://your-adt-instance.api.westeurope.digitaltwins.azure.net

# Azure Service Principal (for non-interactive authentication)
# Create via: az ad sp create-for-rbac --name "ml-service" --role "Azure Digital Twins Data Owner"
AZURE_TENANT_ID=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=

# Alternative: Use Managed Identity or Azure CLI credentials
# Leave the above empty and the SDK will use DefaultAzureCredential
